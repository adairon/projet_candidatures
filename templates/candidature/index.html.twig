{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste de mes Candidature</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poste</th>
                <th>Entreprise</th>
                <th>Contrat</th>
                <th>Localisation</th>
                <th>Date_envoi</th>
