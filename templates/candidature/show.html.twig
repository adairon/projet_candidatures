{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
    <h1>Candidature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidature.id }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ candidature.Poste }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ candidature.Entreprise }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ candidature.Contrat }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ candidature.Localisation }}</td>
            </tr>
            <tr>
                <th>Date_envoi</th>
                <td>{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ candidature.Lien }}</td>
            </tr>
            <tr>
                <th>Plateforme</th>
                <td>{{ candidature.Plateforme }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ candidature.Statut }}</td>
            </tr>
            <tr>
                <th>Mise_a_jour</th>
                <td>{{ candidature.MiseAJour ? candidature.MiseAJour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
